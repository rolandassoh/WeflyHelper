<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimayLight"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:id="@+id/liProfile"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            android:id="@+id/profileImg"
            style="@style/ImageView.GuillotineItem" />

        <com.wedevgroup.weflyhelper.utils.design.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/menu_profile" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liSetting"
        android:clickable="true"
        android:background="?attr/selectableItemBackground"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            android:id="@+id/settingImg"
            style="@style/ImageView.GuillotineItem" />

        <com.wedevgroup.weflyhelper.utils.design.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/menu_settings" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liHelp"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            android:id="@+id/helpImg"
            style="@style/ImageView.GuillotineItem" />

        <com.wedevgroup.weflyhelper.utils.design.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/menu_help" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_divider_height" />

    <LinearLayout
        android:id="@+id/liLogout"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            android:id="@+id/logoutImg"
            style="@style/ImageView.GuillotineItem"
            />

        <com.wedevgroup.weflyhelper.utils.design.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/logout" />
    </LinearLayout>
</LinearLayout>